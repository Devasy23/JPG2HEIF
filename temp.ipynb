   "source": [
    "import cv2\n",
    "import pillow_heif\n",
    "\n",
    "cv_img = cv2.imread(\"temp.jpg\", cv2.IMREAD_UNCHANGED)\n",
    "heif_file = pillow_heif.from_bytes(\n",
    "    mode=\"BGR\",\n",
    "    size=(cv_img.shape[1], cv_img.shape[0]),\n",
    "    data=bytes(cv_img)\n",
    ")\n",
    "heif_file.save(\"RGBA_10bit.heif\", format=\"HEIF\")"
   ]
  }
